## Shared

TZ=Europe/Istanbul

# Container restart policy
# Defaults to unless-stopped
RESTART_POLICY=unless-stopped

SERVICE_IMAGE_TAG=1.0.0

## App
SERVER_PORT=9090
API_BASE_PATH:/api
ACTIVE_PROFILE=prod

OPENAPI_TITLE=Spring Boot Bitcoin REST API
OPENAPI_DESCRIPTION=Provides access to the core features of Spring Boot Bitcoin Rest Api.
OPENAPI_VERSION=1.0.0
OPENAPI_TERMS-OF-SERVICE-URL=http://swagger.io/terms/
OPENAPI_LICENCE=Apache 2.0
OPENAPI_LICENCE_URL=http://springdoc.org

PROBLEM_FIELD_ERRORS_KEY=fieldErrors
PROBLEM_MESSAGE_KEY=message
PROBLEM_PATH_KEY=path
PROBLEM_VIOLATIONS_KEY=violations
PROBLEM_ERROR_VALIDATION=error.validation
PROBLEM_BASE_URL=https://www.spring.test/problem
PROBLEM_UNEXPECTED_ERROR_PACKAGE_LIST=org., java., net., javax., com., io., de., com.spring.websocket

POSTGRESQL_HOST=postgresql
POSTGRESQL_PORT=5432

KAFKA_HOST=kafka
KAFKA_PORT=9092

## Postgresql
POSTGRESQL_IMAGE_TAG=13
POSTGRESQL_USERNAME=root
POSTGRESQL_PASSWORD=P@ssword
POSTGRESQL_DATABASE=my_db

## Zookeeper
ZOOKEEPER_IMAGE_TAG=3
ALLOW_ANONYMOUS_LOGIN=yes

## Kafka
KAFKA_IMAGE_TAG=2
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_BROKER_ID=1
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092
ALLOW_PLAINTEXT_LISTENER=yes

## Kafdrop
KAFDROP_IMAGE_TAG=3.27.0
KAFKA_BROKERCONNECT=kafka:9092
JVM_OPTS= -Xms16M -Xmx48M -Xss180K -XX:-TieredCompilation -XX:+UseStringDeduplication -noverify